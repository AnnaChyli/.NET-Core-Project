@model TheWorld.ViewModels.ContactViewModel
@{
	ViewBag.Title = "Contact Us";
}


@* Allows to use these scripts with respect to _Layout page using needed libraries. 
	And _Layout page will have options to Render or not those scripts*@
@section Scripts{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
} 

<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<h2>Contact</h2>
		<form method="POST">
			@* To handle the errors for entire form*@
			<div asp-validation-summary="ModelOnly"></div>

			@if (ViewBag.UserMessage != null)
			{
				//Sends the message directly to the form if it succeeds
				<div>
					<h4>@ViewBag.UserMessage</h4>
				</div>
			}
			<div class="form-group">
				<label asp-for="Name">Name</label>
				<input asp-for="Name" class="form-control"/>
				<span asp-validation-for="Name"></span>
			</div>
			<div class="form-group">
				<label asp-for="Email">Email</label>
				<input type="email" asp-for="Email" class="form-control"/>
				<span asp-validation-for="Email" class="text-muted"></span>
			</div>
			<div class="form-group">
				<label asp-for="Message">Message</label>
				<textarea cols="40" rows="4" asp-for="Message" class="form-control"></textarea>
				<span asp-validation-for="Message" class="text-muted"></span>
			</div>
			<div class="form-group">
				<a asp-controller="App" asp-action="Index" class="btn btn-default" >Cancel</a>
				<input type="submit" class="btn btn-success" value="Send Message"/>
			</div>
		</form>
	</div>
</div>